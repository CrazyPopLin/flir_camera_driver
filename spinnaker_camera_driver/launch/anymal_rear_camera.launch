<launch>
  <!-- Common parameters -->
  <arg name="manager_name" default="manager" />
  <arg name="camera_name" default="jetson_camera" />
  <arg name="frame_id" default="jetson_camera_frame" />
  <arg name="frame_rate" default="20" />

  <arg name="camera_serial" default="19423291" />
  <arg name="camera_calibrated" default="0" />

  <group ns="$(arg camera_name)" >
      <!-- Both cameras are not loaded into one nodelet manager to avoid the namespacing issue. -->
      <node pkg="nodelet" type="nodelet" name="camera_nodelet"
            args="load spinnaker_camera_driver/SpinnakerCameraNodelet /$(arg manager_name)" >
        <param name="frame_id" value="$(arg frame_id)" />
        <param name="serial" value="$(arg camera_serial)" />
        <param name="image_format_color_coding" value="BayerBG8" />
        <param name="color_processing_algorithm" value="HQ_LINEAR" />
	<!-- Trigger related config -->
        <param name="acquisition_mode" value="Continuous" />
        <param name="trigger_source" value="Line0" /> <!-- Pin 2 -->
        <param name="enable_trigger" value="Off" />
        <param name="trigger_activation_mode" value="FallingEdge" />

	<!-- Expose related config -->
        <param name="exposure_mode" value="Timed" />
        <param name="exposure_auto" value="Continuous" />
        <param name="exposure_time" value="100000000" /> <!-- in microseconds -->


        <param name="line_selector" value="Line2" />
        <param name="line_mode" value="Output" />
        <param name="line_source" value="ExposureActive" />

        <!-- Analog related config -->
        <param name="auto_gain" value="Continuous" />
        <param name="auto_white_balance" value="Continuous" />
        <param name="gain" value="3.2" />

        <!-- Options are: clahe, standard or none -->
        <param name="histogram_equalization_enabled" value="none" />
        <param name="histogram_equalization_clahe_clip_limit" value="2" />
        <param name="histogram_equalization_clahe_grid_size" value="8" />

        <!-- When unspecified, the driver will use the default framerate as given by the
             camera itself. Use this parameter to override that value for cameras capable of
             other framerates. -->
        <param name="frame_rate" value="$(arg frame_rate)" />
        <param name="acquisition_frame_rate_enable" value="true" />

        <!-- Use the camera_calibration package to create this file -->
        <param name="camera_info_url" if="$(arg camera_calibrated)"
               value="file://$(env HOME)/.ros/camera_info/$(arg camera_serial).yaml" />
      </node>

      <node pkg="nodelet" type="nodelet" name="image_proc_debayer"
          args="load image_proc/debayer /$(arg manager_name)">
      </node>
  </group>

</launch>
